@model IEnumerable<HRMS.Models.PagIbig>

@{
    ViewData["Title"] = "List";
}
<main id="main" class="main">
    <section class="section">
        <h1>List</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <form action="List">
            <div class="input-group md-form align-content-sm-around form-2 pl-0">
                <input name="searchValue" class="form-control my-0 py-1 red-border" type="text" placeholder="Search" aria-label="Search" />
                <div class="input-group-append">
                    <button type="submit" class="input-group-text red lighten-3" id="basic-text1">
                        <i class="fas fa-search text-black-grey" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PagIbigId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.FirstName)
                    </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PagIbigId)
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                            <a asp-action="Edit" asp-route-PagIbigId="@item.PagIbigId">Edit</a> |
                            <a asp-action="Details" asp-route-PagIbigId="@item.PagIbigId">Details</a> |
                            <a asp-action="Delete" asp-route-PagIbigId="@item.PagIbigId">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </section>
</main>
@section scripts{
    <script>
        $(function () {
            $("#basic-text1").on('keyup', function (e) {
                $("form").submit();
            });
        });
    </script>
}
