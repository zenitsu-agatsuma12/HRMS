@model IEnumerable<HRMS.Models.Position>

@{
    ViewData["Title"] = "List";
}

 <main id="main" class="main">

    <div class="pagetitle">
      <h1>Position Table</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
            </br> 
            <p>
               <a class="btn btn-primary" role="button" asp-action="Create"><i class="fa fa-plus"></i> Add Position</a>
            </p>
            

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Position Name</th>
                    <th></th>
               
                  </tr>
                </thead>
                <tbody>
                 @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PosId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                               <a class="btn btn-success" role="button" asp-action="Update" asp-route-PosId="@item.PosId">Edit</a> 
                               <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-PosId="@item.PosId">Delete</a>
                            </td>
                        </tr>
                }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
@section scripts{
    <script>
        $(function () {
            $("#basic-text1").on('keyup', function (e) {
                $("form").submit();
            });
        });
    </script>
}
