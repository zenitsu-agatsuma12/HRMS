                    <span class="badge bg-primary badge-number">@ViewBag.NumberOfInActive</span>
                </a>
             </li>
          }


        //return the number Of Message

        var countMessage = _repo.ListOfEmployeePerformance(null).Where(e => e.Status == true).Count();
        ViewBag.countMessage=countMessage;
        if(ViewBag.countMessage!=0){
            <li class="nav-item dropdown">
                <a class="nav-link collapsed" asp-area="" asp-controller="EmployeePerformance" asp-action="List">
