@model ChangePasswordViewModel;


<main id="main" class="main">
    <section class="section">
        <div class="container mt-5" style="width: 400px;">
            <form asp-controller="Account" asp-action="ChangePassword" method="post">
                <div class="card p-4 text-center">
                    <p class="text-black fs-3">Change Password</p>
                    <p class="text-secondary mt-n3"></p>

                    <div class="text-start">
                        <div>
                            <input class="form-control" asp-for="CurrentPassword" placeholder="Current Password" />
                        </div>

                        <div class="mt-3">
                            <input type="password" class="form-control" asp-for="NewPassword" placeholder="New Password" />
                        </div>

                        <div class="mt-3">
                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                        </div>

                        <div asp-validation-summary="All" class="text-danger" >
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3" data-bs-target="#changePasswordModal">Save</button>
                    
                </div>
            </form>
        </div>
    </section>
</main>


